<div id="settings-panel" class="settings-panel hidden">
    <div class="settings-header">
        <h3>Conversion Settings</h3>
        <button id="settings-close" class="btn-icon">
            <svg class="icon" viewBox="0 0 24 24">
                <line x1="18" y1="6" x2="6" y2="18"/>
                <line x1="6" y1="6" x2="18" y2="18"/>
            </svg>
        </button>
    </div>

    <div class="settings-content">
        <!-- Format & Quality Section -->
        <div class="settings-section">
            <h4 class="section-title">Format & Quality</h4>
            
            <div class="setting-group">
                <label class="setting-label">Output Format</label>
                <div class="format-grid">
                    <button class="format-btn active" data-format="webp">
                        <span class="format-name">WebP</span>
                        <span class="format-desc">Best compression</span>
                    </button>
                    <button class="format-btn" data-format="jpeg">
                        <span class="format-name">JPEG</span>
                        <span class="format-desc">Universal support</span>
                    </button>
                    <button class="format-btn" data-format="png">
                        <span class="format-name">PNG</span>
                        <span class="format-desc">Lossless</span>
                    </button>
                    <button class="format-btn" data-format="avif">
                        <span class="format-name">AVIF</span>
                        <span class="format-desc">Next-gen</span>
                    </button>
                </div>
            </div>

            <div class="setting-group">
                <label class="setting-label">Quality: <span id="quality-value">85</span>%</label>
                <div class="quality-slider-container">
                    <input type="range" id="quality-slider" class="slider" min="1" max="100" value="85">
                    <div class="quality-indicators">
                        <span class="quality-label">Low</span>
                        <span class="quality-label">High</span>
                    </div>
                </div>
                <div class="quality-preview">
                    <span class="file-size-estimate">Est. file size: <span id="size-estimate">~65% smaller</span></span>
                </div>
            </div>
        </div>

        <!-- Resize Section -->
        <div class="settings-section">
            <h4 class="section-title">Resize Options</h4>
            
            <div class="setting-group">
                <div class="resize-presets">
                    <button class="preset-btn active" data-width="1920" data-height="1080">
                        <span class="preset-name">1920×1080</span>
                        <span class="preset-desc">Full HD</span>
                    </button>
                    <button class="preset-btn" data-width="1280" data-height="720">
                        <span class="preset-name">1280×720</span>
                        <span class="preset-desc">HD</span>
                    </button>
                    <button class="preset-btn" data-width="800" data-height="600">
                        <span class="preset-name">800×600</span>
                        <span class="preset-desc">Standard</span>
                    </button>
                    <button class="preset-btn custom-btn" data-custom="true">
                        <span class="preset-name">Custom</span>
                        <span class="preset-desc">Set dimensions</span>
                    </button>
                </div>
            </div>

            <div id="custom-dimensions" class="setting-group hidden">
                <div class="dimension-inputs">
                    <div class="input-group">
                        <label>Width</label>
                        <input type="number" id="custom-width" placeholder="1920" min="1" max="10000">
                    </div>
                    <button id="aspect-lock" class="aspect-lock-btn active">
                        <svg class="icon" viewBox="0 0 24 24">
                            <rect x="3" y="11" width="18" height="10" rx="2" ry="2"/>
                            <circle cx="12" cy="16" r="1"/>
                            <path d="M7 11V7a5 5 0 0110 0v4"/>
                        </svg>
                    </button>
                    <div class="input-group">
                        <label>Height</label>
                        <input type="number" id="custom-height" placeholder="1080" min="1" max="10000">
                    </div>
                </div>
            </div>

            <div class="setting-group">
                <label class="setting-label">Fit Mode</label>
                <select id="fit-mode" class="select-input">
                    <option value="inside">Fit inside (maintain aspect)</option>
                    <option value="cover">Cover (crop if needed)</option>
                    <option value="fill">Fill (stretch)</option>
                    <option value="outside">Fit outside</option>
                </select>
            </div>
        </div>

        <!-- Watermark Section -->
        <div class="settings-section">
            <h4 class="section-title">Watermark</h4>
            
            <div class="setting-group">
                <div class="watermark-type-tabs">
                    <button class="tab-btn active" data-type="none">None</button>
                    <button class="tab-btn" data-type="text">Text</button>
                    <button class="tab-btn" data-type="image">Image</button>
                </div>
            </div>

            <div id="text-watermark" class="watermark-options hidden">
                <div class="setting-group">
                    <label class="setting-label">Text</label>
                    <input type="text" id="watermark-text" class="text-input" placeholder="Your watermark text">
                </div>
                
                <div class="setting-group">
                    <label class="setting-label">Font Size: <span id="font-size-value">24</span>px</label>
                    <div class="font-size-slider-container">
                        <input type="range" id="font-size-slider" class="slider" min="8" max="100" value="24">
                        <div class="size-indicators">
                            <span class="size-label">Small</span>
                            <span class="size-label">Large</span>
                        </div>
                    </div>
                </div>
                
                <div class="setting-group">
                    <label class="setting-label">Font Family</label>
                    <select id="watermark-font" class="select-input">
                        <!-- Web Safe Fonts -->
                        <optgroup label="Web Safe Fonts">
                            <option value="Arial">Arial</option>
                            <option value="Helvetica">Helvetica</option>
                            <option value="Times New Roman">Times New Roman</option>
                            <option value="Georgia">Georgia</option>
                            <option value="Verdana">Verdana</option>
                            <option value="Comic Sans MS">Comic Sans MS</option>
                            <option value="Courier New">Courier New</option>
                            <option value="Impact">Impact</option>
                        </optgroup>
                        
                        <!-- Handwriting & Script Fonts (Google Fonts) -->
                        <optgroup label="Handwriting & Script">
                            <option value="Dancing Script">Dancing Script</option>
                            <option value="Great Vibes">Great Vibes</option>
                            <option value="Pacifico">Pacifico</option>
                            <option value="Indie Flower">Indie Flower</option>
                            <option value="Kaushan Script">Kaushan Script</option>
                            <option value="Allura">Allura</option>
                            <option value="Alex Brush">Alex Brush</option>
                            <option value="Satisfy">Satisfy</option>
                            <option value="League Script">League Script</option>
                            <option value="Rochester">Rochester</option>
                            <option value="Arizonia">Arizonia</option>
                            <option value="Yellowtail">Yellowtail</option>
                            <option value="Brush Script MT">Brush Script MT</option>
                            <option value="Bradley Hand ITC">Bradley Hand ITC</option>
                            <option value="Lucida Handwriting">Lucida Handwriting</option>
                        </optgroup>
                        
                        <!-- Elegant Scripts -->
                        <optgroup label="Elegant Scripts">
                            <option value="Tangerine">Tangerine</option>
                            <option value="Lobster">Lobster</option>
                            <option value="Parisienne">Parisienne</option>
                            <option value="Pinyon Script">Pinyon Script</option>
                            <option value="Mrs Saint Delafield">Mrs Saint Delafield</option>
                            <option value="Mr De Haviland">Mr De Haviland</option>
                            <option value="Monsieur La Doulaise">Monsieur La Doulaise</option>
                            <option value="Miss Fajardose">Miss Fajardose</option>
                        </optgroup>
                        
                        <!-- Modern Scripts -->
                        <optgroup label="Modern Scripts">
                            <option value="Euphoria Script">Euphoria Script</option>
                            <option value="Niconne">Niconne</option>
                            <option value="Italianno">Italianno</option>
                            <option value="Petit Formal Script">Petit Formal Script</option>
                            <option value="Stalemate">Stalemate</option>
                            <option value="Herr Von Muellerhoff">Herr Von Muellerhoff</option>
                        </optgroup>
                    </select>
                </div>

                <div class="setting-group">
                    <label class="setting-label">Font Style</label>
                    <div class="font-style-buttons">
                        <button type="button" class="style-btn" data-style="normal">Normal</button>
                        <button type="button" class="style-btn" data-style="bold">Bold</button>
                        <button type="button" class="style-btn" data-style="italic">Italic</button>
                        <button type="button" class="style-btn active" data-style="bold italic">Bold Italic</button>
                    </div>
                </div>
            </div>

            <div id="image-watermark" class="watermark-options hidden">
                <div class="setting-group">
                    <div class="watermark-upload">
                        <button id="watermark-upload-btn" class="btn btn-secondary">
                            <svg class="icon" viewBox="0 0 24 24">
                                <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"/>
                                <polyline points="7,10 12,15 17,10"/>
                                <line x1="12" y1="15" x2="12" y2="3"/>
                            </svg>
                            Upload Logo
                        </button>
                        <div id="watermark-preview" class="watermark-preview hidden">
                            <img id="watermark-image" src="" alt="Watermark">
                            <button id="remove-watermark" class="remove-btn">×</button>
                        </div>
                    </div>
                    <input type="file" id="watermark-input" accept="image/*" style="display: none;">
                </div>
            </div>

            <div id="watermark-controls" class="watermark-controls hidden">
                <div class="setting-group">
                    <label class="setting-label">Position</label>
                    <div class="position-grid">
                        <button class="position-btn" data-position="northwest">↖</button>
                        <button class="position-btn" data-position="north">↑</button>
                        <button class="position-btn" data-position="northeast">↗</button>
                        <button class="position-btn" data-position="west">←</button>
                        <button class="position-btn" data-position="center">⊙</button>
                        <button class="position-btn" data-position="east">→</button>
                        <button class="position-btn" data-position="southwest">↙</button>
                        <button class="position-btn active" data-position="south">↓</button>
                        <button class="position-btn" data-position="southeast">↘</button>
                    </div>
                </div>

                <div class="setting-group">
                    <label class="setting-label">Opacity: <span id="opacity-value">70</span>%</label>
                    <input type="range" id="opacity-slider" class="slider" min="10" max="100" value="70">
                </div>
            </div>
        </div>

        <!-- Naming Section -->
        <div class="settings-section">
            <h4 class="section-title">File Naming</h4>
            
            <div class="setting-group">
                <div class="naming-tabs">
                    <button class="tab-btn active" data-naming="original">Keep Original</button>
                    <button class="tab-btn" data-naming="custom">Custom Pattern</button>
                    <button class="tab-btn" data-naming="numbered">Sequential</button>
                </div>
            </div>

            <div id="custom-naming" class="naming-options hidden">
                <div class="setting-group">
                    <label class="setting-label">Prefix</label>
                    <input type="text" id="naming-prefix" class="text-input" placeholder="image" value="image">
                </div>
                
                <div class="setting-group">
                    <label class="setting-label">Start Number</label>
                    <input type="number" id="naming-start" class="text-input" value="1" min="0">
                </div>
                
                <div class="naming-preview">
                    <span class="preview-label">Preview: </span>
                    <span id="naming-preview-text">image001.webp</span>
                </div>
            </div>
        </div>
    </div>

    <div class="settings-footer">
        <button id="reset-settings" class="btn btn-secondary">Reset to Default</button>
        <button id="save-settings" class="btn btn-primary">Save Settings</button>
    </div>
</div>